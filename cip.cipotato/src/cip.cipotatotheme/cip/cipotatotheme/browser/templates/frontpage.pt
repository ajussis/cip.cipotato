<html metal:use-macro="here/main_template/macros/master">
<metal:block fill-slot="top_slot"
                 tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',2);" />
    <metal:main_macro define-macro="main">
        <metal:main fill-slot="main"
                    tal:define="cipnews python: getattr(context, 'cipnews');
                                cipinthenews python:getattr(context, 'cipinthenews');
                                featured python:getattr(context, 'featured');
                                toLocalizedTime nocall:context/@@plone/toLocalizedTime;">


            <div class="lineBreak"></div>

            <div class="first-column">
                <div class="cip-news">
                    <h1>News from CIP</h1>

                    <tal:defs define="n cipnews/queryCatalog;
                                      n python:n[:2]">
                        <div class="cip-news-p" tal:repeat="m n">
                            <a href="#"
                                tal:define="item_object m/getObject;
                                            item_url m/getURL;"
                                tal:condition="exists:item_object/image_thumb"
                                tal:attributes="href python:item_url+'/view', item_url">
                                <img src="" alt=""
                                     tal:replace="structure python: path('nocall:item_object/tag')(scale='thumb', css_class='tileImage')" />
                            </a>
                            <tal:rep define="pType m/portal_type;
                                             author m/Creator">
                                <b>
                                    <a href="#" tal:attributes="href m/getURL">
                                        <span tal:replace="m/pretty_title_or_id"/>
                                    </a>
                                </b>
                                <span class="frontDate">
                                    <span class="frontDate2" tal:content="python:toLocalizedTime(m.Date)" />
                                </span>
                                <p style="margin-top:0.2em !important;" tal:content="m/Description" />
                            </tal:rep>
                        </div>
                    </tal:defs>
                    <!--tal:defs define="n cipnews/queryCatalog;
                                      n python:n[1:3]">
                        <div class="cip-news-p" tal:repeat="m n">
                            <ul class="cip-news-ul">
                                <li class="cip-news-li">
                                    <tal:rep define="pType m/portal_type;
                                                     author m/Creator">
                                        <b>
                                            <a href="#" tal:attributes="href m/getURL">
                                                <span tal:replace="m/pretty_title_or_id"/>
                                            </a>
                                        </b>
                                        <span class="frontDate">
                                            <span class="frontDate2" tal:content="python:toLocalizedTime(m.Date)" />
                                        </span>
                                    </tal:rep>
                                </li>
                            </ul>
                        </div>
                    </tal:defs-->
                </div>
            </div>

            <div class="second-column">
                <div class="cip-in-the-news">
                    <h1>CIP in the Media</h1>
                    <ul tal:define="n cipinthenews/queryCatalog">
                        <li class="cip-news-li" tal:repeat="m n">
                            <tal:defs2 define="item_object m/getObject;
                                               item_url m/getURL;">
                                <a href="#"
                                    tal:condition="exists:item_object/image_thumb"
                                    tal:attributes="href python:item_url+'/view', item_url">
                                    <img src="" alt=""
                                         tal:replace="structure python: path('nocall:item_object/tag')(scale='thumb', css_class='tileImage')" />
                                </a>
                                <tal:rep define="source item_object/getMediasource">
                                    <b>
                                        <a href="#" tal:attributes="href m/getURL">
                                            <span tal:replace="m/pretty_title_or_id"/>
                                        </a><br />
                                    </b>
                                    <span class="frontDate">
                                        <span class="frontDate3" tal:content="source" />
                                        <span class="frontDate2" tal:content="python:toLocalizedTime(m.Date)" />
                                    </span>
                                </tal:rep>
                            </tal:defs2>
                        </li>
                    </ul>
                </div>

                <div class="cip-front-social">
                    <ul id="nav-shadow">
                        <li class="button-color-1"><a href="#" title="CIP in Facebook"><img src="front-facebook.jpg" class="front-social-blocks" /></a></li>
                        <li class="button-color-2"><a href="#" title="CIP in Twitter"><img src="front-twitter.jpg" class="front-social-blocks" /></a></li>
                        <li class="button-color-3"><a href="#" title="CIP in Flickr"><img src="front-flickr.jpg" class="front-social-blocks" /></a></li>
                        <li class="button-color-4"><a href="#" title="CIP in Slideshare"><img src="front-slideshare.jpg" class="front-social-blocks" /></a></li>
                        <li class="button-color-5"><a href="#" title="CIP blogs"><img src="front-cipblogs.jpg" class="front-social-blocks" /></a></li>
                        <li class="button-color-6"><a href="#" title="CIP in Youtube"><img src="front-youtube.jpg" class="front-social-blocks" /></a></li>
                    </ul><!-- end shadow navigation -->
                </div>
            </div>



<!-- _______________________ PUBLICATIONS __________________________________-->


            <script type="text/javascript">
                    $(document).ready(function(){
                            $('#slider1').bxSlider({
                                    infiniteLoop: false,
                                    hideControlOnEnd: true
                            });
                    });
            </script>

            <div class="second-row">
                <div class="third-column">
                    <h1>Publications</h1>

                    <div class="lineBreak"></div>

                    <div id="wrapper">
                        <ul id="slider1" tal:define="n featured/queryCatalog;">
                            <tal:defs tal:repeat="m n">
                                <li tal:define="s repeat/m/number;">
                                    <div class="featuredPub" tal:define="item_url m/getURL;
                                                                         pubi m/getPubcode;">
                                        <img src="" alt=""
                                             tal:attributes="src python:'/cipotato/resources/publications/images2/'+pubi+'-jpg/image_thumb';
                                                             class python:'cip-front-pubimg';" />
                                        <div tal:define="item_object m/getObject;">
                                            <tal:rep define="source item_object/getCategory;
                                                             series item_object/getSeries;">
                                                <b class="title">
                                                    <a href="#" tal:attributes="href m/getURL">
                                                        <span tal:replace="m/pretty_title_or_id"/>
                                                    </a>
                                                </b>
                                                <p class="frontDate">
                                                    <span class="frontDate3" tal:content="source" />
                                                    <span class="frontDate2" tal:content="python:toLocalizedTime(m.Date)" />
                                                    <br />
                                                    <span class="frontDate3" tal:content="series"/>
                                                </p>
                                                <p class="frontpdf" tal:define="pubcode m/getPubcode;
                                                                                url python:'publications/pdf/'+pubcode+'/at_download/'">
                                                    <a href="#" tal:attributes="href url">Download pdf</a>
                                                </p>
                                            </tal:rep>
                                        </div>
                                    </div>
                                </li>
                            </tal:defs>
                        </ul>
                    </div>

                </div>
                <div class="forth-column">
                    <ul id="nav-shadow">
                        <li class="front-crp"><a href="#" class="firsticon" title="CIP"><img width="90" src="front-cpr.gif" /></a></li>
                        <li class="front-csd"><a href="#" class="firsticon" title="CIP"><img width="90" src="front-csd-2.png" /></a></li>
                        <li class="front-germplasm"><a href="#" class="firsticon" title="CIP"><img width="90" src="front-getgermplasm-2.gif" /></a></li>
                        <li class="front-papatube"><a href="#" title="CIP"><img src="front-papatube.jpg" /></a></li>
                        <li class="front-newsletter"><a href="#" title="CIP"><img src="front-newsletter.jpg" /></a></li>
                    </ul>
                </div>
                <!--div class="forth-column">
                    <ul id="nav-shadow">
                        <li class="front-csd"><a href="#" title="CIP"><img src="front-csd.gif" /></a></li>
                        <li class="front-germplasm"><a href="#" title="CIP"><img src="front-getgermplasm.gif" /></a></li>
                        <li class="front-papatube"><a href="#" title="CIP"><img src="front-papatube.jpg" /></a></li>
                        <li class="front-newsletter"><a href="#" title="CIP"><img src="front-newsletter.jpg" /></a></li>
                    </ul>
                </div-->
            </div>
        </metal:main>
    </metal:main_macro>
</html>
