<html metal:use-macro="here/main_template/macros/master">
<metal:block fill-slot="top_slot"
                 tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                             disable_column_two python:request.set('disable_plone.rightcolumn',2);" />
    <metal:main_macro define-macro="main">
        <metal:main fill-slot="main"
                    tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

            <h1 tal:content="context/Title" class="page_title" />

            <div class="lineBreak"></div>

            <!-- Latest of all publications -->

            <div tal:define="path python:'/'.join(here.getPhysicalPath());
                             pubs python:context.portal_catalog(path={'query' : path, 'depth' : 1}, portal_type = 'Publication');">

                <div style="margin-top:15px;">
                    <div class="pubrow" tal:repeat="obj pubs">
                        <tal:defs2 tal:define="sub_title obj/pretty_title_or_id;
                                               sub_url obj/getURL|obj/absolute_url;
                                               item_created obj/CreationDate;
                                               item_object obj/getObject;
                                               ">
                            <tal:defs define="pc obj/getPubcode;
                                              source item_object/getCategory;
                                              series item_object/getSeries;">
                                <h2>
                                    <img src="cip-icon.gif" />
                                    <a href="#"
                                        class="pubrow_title"
                                        tal:content="sub_title"
                                        tal:attributes="href sub_url" />
                                </h2>
                                <div class="pubrow_info">
                                    <tal:testimg condition="python:view.ImageExist(pc)">
                                        <img src="" alt=""
                                             tal:attributes="src python:'../images/' + pc + '-jpg/image_thumb';
                                                             class python:'pub-img2';" />
                                    </tal:testimg>
                                        <span class="frontDate3" tal:content="source" />
                                        <span style="font-size:11px; margin-left:20px;" tal:content="python:toLocalizedTime(item_created,long_format=0)" />
                                        <br />
                                        <span class="frontDate3" tal:content="series"/>
                                        <p class="frontpdf" tal:define="url python:'publications/pdf/'+pc+'/at_download/'">
                                            <a href="#" tal:attributes="href url">Download pdf</a>
                                        </p>
                                 </div>
                            </tal:defs>
                        </tal:defs2>
                        <div class="visualClear"></div>
                    </div>
                </div>


            </div>
        </metal:main>
    </metal:main_macro>
</html>
