<registry>
  <record field="actions_category" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.actions_category">
    <field type="plone.registry.field.TextLine">
      <default>portal_tabs</default>
      <description>Root category id of portal_actions based dropdown menu tree</description>
      <title>Root portal actions category</title>
    </field>
    <value>portal_tabs</value>
  </record>
  <record field="actions_tabs_level" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.actions_tabs_level">
    <field type="plone.registry.field.Int">
      <default>0</default>
      <description>How many levels of portal_actions to list after the top level.</description>
      <title>Actions dropdown menu depth</title>
    </field>
    <value>0</value>
  </record>
  <record field="content_before_actions_tabs" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.content_before_actions_tabs">
    <field type="plone.registry.field.Bool">
      <default>False</default>
      <title>Show content tabs before portal_actions tabs</title>
    </field>
    <value>False</value>
  </record>
  <record field="content_tabs_level" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.content_tabs_level">
    <field type="plone.registry.field.Int">
      <default>0</default>
      <description>How many levels folders to list after the top level.</description>
      <title>Navigation strategy dropdown menu depth</title>
    </field>
    <value>0</value>
  </record>
  <record field="nested_category_prefix" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.nested_category_prefix">
    <field type="plone.registry.field.TextLine">
      <default />
      <description>Prefix of category id, used to bind category with action</description>
      <required>False</required>
      <title>Nested category prefix</title>
    </field>
    <value />
  </record>
  <record field="nested_category_sufix" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.nested_category_sufix">
    <field type="plone.registry.field.TextLine">
      <default>_sub</default>
      <description>Sufix of category id, used to bind category with action</description>
      <required>False</required>
      <title>Nested category sufix</title>
    </field>
    <value>_sub</value>
  </record>
  <record field="show_actions_tabs" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.show_actions_tabs">
    <field type="plone.registry.field.Bool">
      <default>True</default>
      <description>Use this setting to enable/disable portal_actions based dropdown menu</description>
      <title>Show actions tabs</title>
    </field>
    <value>True</value>
  </record>
  <record field="show_content_tabs" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.show_content_tabs">
    <field type="plone.registry.field.Bool">
      <default>True</default>
      <description>Use this setting to switch on/off navigation strategy built dropdown menu</description>
      <title>Show navigation strategy based dropdown menu</title>
    </field>
    <value>True</value>
  </record>
  <record field="show_icons" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.show_icons">
    <field type="plone.registry.field.Bool">
      <default>False</default>
      <description>Use this setting to switch on/off icons for menu items.</description>
      <title>Show tabs icons</title>
    </field>
    <value>False</value>
  </record>
  <record field="show_nonfolderish_tabs" interface="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings" name="quintagroup.dropdownmenu.interfaces.IDropDownMenuSettings.show_nonfolderish_tabs">
    <field type="plone.registry.field.Bool">
      <default>True</default>
      <description>Use this setting to switch on/off non-folderish objects in navigation strategy based dropdown menu</description>
      <title>Show non-folderish menu items</title>
    </field>
    <value>True</value>
  </record>
</registry>