<tal:tabs tal:condition="view/portal_tabs"
          i18n:domain="plone">
    <ul id="portal-globalnav">
        <li tal:replace="structure view/createMenu">
            DropDown Menu
        </li>
    </ul>
    <div class='tabbed_content_static' 
         tal:define="object_title context/@@plone_context_state/object_title;
                     url request/URL;
                     gen python:'/genebank' in url;
                     pot python:'/potato' in url;
                     swe python:'/sweetpotato' in url;
                     art python:'/roots-and-tubers' in url;
                     portal_url context/portal_url;
                     genebank python:portal_url+'/genebank/';
                     potato python:portal_url+'/potato/';
                     sweetpotato python:portal_url+'/sweetpotato/';
                     arts python:portal_url+'/roots-and-tubers/'">
        <div class='tabs_static' tal:condition="python:object_title != 'International Potato Center'">
            <span class='tab_item_static cip-front1-tab'>
                    <a href="#" tal:attributes="href genebank">GENEBANK</a>
            </span>
            <span class='tab_item_static cip-front2-tab'>
                    <a href="#" tal:attributes="href potato">POTATO</a>
            </span>
            <span class='tab_item_static cip-front3-tab'>
                    <a href="#" tal:attributes="href sweetpotato">SWEETPOTATO</a>
            </span>
            <span class='tab_item_static cip-front4-tab'>
                    <a href="#" tal:attributes="href arts">ANDEAN ROOTS & TUBERS</a>
            </span>
        </div>
        <!--div class="buttonslides">
            <img tal:condition="gen" class="cip-front1-img" src="bargene.png" />
            <img tal:condition="pot" class="cip-front2-img" src="barpotato.png" />
            <img tal:condition="swe" class="cip-front3-img" src="barsweet.png" />
            <img tal:condition="art" class="cip-front4-img" src="barrtas.png" style="margin-right:3px;" />
        </div-->
    </div>
</tal:tabs>
